{
  "color": {
    "$type": "color",
    "$description": "Color tokens with auto-generated content colors",
    "primary": {
      "$value": "oklch(49.12% 0.309 275.75)",
      "$description": "Primary brand color (DaisyUI default)"
    },
    "primary-content": {
      "$value": "contrast({color.primary})",
      "$description": "Auto-generated content color for primary"
    },
    "secondary": {
      "$value": "#8b5cf6",
      "$description": "Secondary brand color"
    },
    "secondary-content": {
      "$value": "contrast({color.secondary})",
      "$description": "Auto-generated content color for secondary"
    },
    "accent": {
      "$value": "oklch(76.76% 0.184 183.61)",
      "$description": "Accent color"
    },
    "accent-content": {
      "$value": "contrast({color.accent})",
      "$description": "Auto-generated content color for accent"
    },
    "neutral": {
      "$value": "#1f2937",
      "$description": "Neutral dark color"
    },
    "neutral-light": {
      "$value": "lighten({color.neutral}, 30%)",
      "$description": "Lightened neutral"
    },
    "neutral-dark": {
      "$value": "darken({color.neutral}, 20%)",
      "$description": "Darkened neutral"
    }
  },
  "size": {
    "$type": "dimension",
    "$description": "Size tokens with scale expansion",
    "field": {
      "$value": "2.5rem",
      "$description": "Base field size (button, input, tab)",
      "$scale": {
        "xs": 0.6,
        "sm": 0.8,
        "md": 1.0,
        "lg": 1.2,
        "xl": 1.4
      }
    },
    "selector": {
      "$value": "1.5rem",
      "$description": "Base selector size (checkbox, radio, toggle)",
      "$scale": {
        "xs": 0.6,
        "sm": 0.8,
        "md": 1.0,
        "lg": 1.2,
        "xl": 1.4
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "$description": "Spacing scale using calc expressions",
    "base": {
      "$value": "1rem",
      "$description": "Base spacing unit"
    },
    "xs": {
      "$value": "calc({spacing.base} * 0.25)",
      "$description": "Extra small spacing"
    },
    "sm": {
      "$value": "calc({spacing.base} * 0.5)",
      "$description": "Small spacing"
    },
    "md": {
      "$value": "{spacing.base}",
      "$description": "Medium spacing (same as base)"
    },
    "lg": {
      "$value": "calc({spacing.base} * 1.5)",
      "$description": "Large spacing"
    },
    "xl": {
      "$value": "calc({spacing.base} * 2)",
      "$description": "Extra large spacing"
    },
    "2xl": {
      "$value": "calc({spacing.base} * 3)",
      "$description": "2x large spacing"
    }
  },
  "radius": {
    "$type": "dimension",
    "$description": "Border radius tokens",
    "box": {
      "$value": "1rem",
      "$description": "For boxes (card, modal, alert)"
    },
    "field": {
      "$value": "0.5rem",
      "$description": "For fields (button, input, select)"
    },
    "selector": {
      "$value": "9999px",
      "$description": "For selectors (checkbox, toggle, badge)"
    }
  },
  "border": {
    "$type": "dimension",
    "$description": "Border size",
    "default": {
      "$value": "1px"
    },
    "thick": {
      "$value": "calc({border.default} * 2)"
    }
  }
}
