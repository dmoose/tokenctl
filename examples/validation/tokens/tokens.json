{
  "$description": "Example demonstrating constraint validation, effect tokens, and @property declarations",

  "color": {
    "$type": "color",
    "primary": {
      "$value": "oklch(49.12% 0.309 275.75)",
      "$description": "Primary brand color",
      "$property": true
    },
    "primary-content": {
      "$value": "contrast({color.primary})",
      "$description": "Auto-generated content color for primary"
    },
    "secondary": {
      "$value": "#8b5cf6",
      "$description": "Secondary brand color",
      "$property": true
    }
  },

  "size": {
    "$type": "dimension",
    "field": {
      "$value": "2.5rem",
      "$description": "Base size for form fields (button, input, etc.)",
      "$min": "1rem",
      "$max": "5rem"
    },
    "selector": {
      "$value": "1.5rem",
      "$description": "Base size for selectors (checkbox, radio, toggle)",
      "$min": "0.75rem",
      "$max": "3rem"
    }
  },

  "border": {
    "$type": "dimension",
    "default": {
      "$value": "1px",
      "$description": "Default border width",
      "$min": "0px",
      "$max": "10px"
    },
    "thick": {
      "$value": "2px",
      "$description": "Thick border width",
      "$min": "1px",
      "$max": "10px"
    }
  },

  "radius": {
    "$type": "dimension",
    "box": {
      "$value": "1rem",
      "$description": "Border radius for boxes (card, modal, alert)",
      "$min": "0rem",
      "$max": "3rem"
    },
    "field": {
      "$value": "0.5rem",
      "$description": "Border radius for fields (button, input, select)",
      "$min": "0rem",
      "$max": "2rem"
    },
    "selector": {
      "$value": "9999px",
      "$description": "Border radius for selectors (fully rounded)"
    }
  },

  "effect": {
    "$type": "effect",
    "depth": {
      "$value": 1,
      "$description": "Enable depth shadows on components (0 or 1)",
      "$property": true
    },
    "noise": {
      "$value": 0,
      "$description": "Enable noise texture overlay (0 or 1)"
    }
  },

  "timing": {
    "$type": "duration",
    "fast": {
      "$value": "150ms",
      "$description": "Fast transition timing",
      "$property": { "inherits": false }
    },
    "normal": {
      "$value": "250ms",
      "$description": "Normal transition timing",
      "$property": true
    }
  },

  "opacity": {
    "$type": "number",
    "disabled": {
      "$value": 0.5,
      "$description": "Opacity for disabled elements",
      "$min": 0,
      "$max": 1
    },
    "hover": {
      "$value": 0.8,
      "$description": "Opacity for hover states",
      "$min": 0,
      "$max": 1
    }
  },

  "font": {
    "family": {
      "sans": {
        "$type": "fontFamily",
        "$value": ["Inter", "ui-sans-serif", "system-ui", "sans-serif"],
        "$description": "Sans-serif font stack"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": ["JetBrains Mono", "ui-monospace", "monospace"],
        "$description": "Monospace font stack"
      }
    }
  }
}
